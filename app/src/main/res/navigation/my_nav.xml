<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_nav"
    app:startDestination="@id/exerciseFragment">

    <fragment
        android:id="@+id/exerciseFragment"
        android:name="com.example.gymapp.ui.fragments.ExerciseFragment"
        android:label="Exercise">
        <action
            android:id="@+id/action_exerciseFragment_to_exerciseDetailsFragment"
            app:destination="@id/exerciseDetailsFragment">
            <argument
                android:name="exerciseId"
                app:argType="long" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.gymapp.ui.screens.profile.ProfileFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/startWorkoutFragment"
        android:name="com.example.gymapp.ui.fragments.StartWorkoutFragment"
        android:label="StartWorkout">
        <action
            android:id="@+id/action_startWorkoutFragment_To_onGoingWorkoutFragment"
            app:destination="@id/onGoingWorkoutFragment">
            <argument
                android:name="workoutId"
                app:argType="long" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/onGoingWorkoutFragment"
        android:name="com.example.gymapp.ui.screens.ongoingworkout.OnGoingWorkoutFragment"
        android:label="OnGoingWorkout">
        <argument
            android:name="workoutId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/CreateWorkoutFragment"
        android:name="com.example.gymapp.ui.fragments.CreateWorkoutFragment"
        android:label="CreateWorkout" />
    <fragment
        android:id="@+id/AddExerciseToWorkoutFragment"
        android:name="com.example.gymapp.ui.fragments.AddExerciseToWorkoutFragment"
        android:label="AddExerciseToWorkout" />

    <fragment
        android:id="@+id/WorkoutDetailsFragment"
        android:name="com.example.gymapp.ui.fragments.WorkoutDetailsFragment"
        android:label="WorkoutDetail">
        <argument
            android:name="workoutId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/WorkoutsDetailsFragment"
        android:name="com.example.gymapp.ui.fragments.WorkoutsDetailsFragment"
        android:label="WorkoutDetails">
        <action
            android:id="@+id/action_WorkoutsDetailsFragment_to_WorkoutDetailFragment"
            app:destination="@id/WorkoutDetailsFragment">
            <argument
                android:name="workoutId"
                app:argType="long" />
        </action>
    </fragment>


    <fragment
        android:id="@+id/exerciseEditFragment"
        android:name="com.example.gymapp.ui.screens.exerciseedit.ExerciseEditFragment"
        android:label="ExerciseEdit">
        <argument
            android:name="exercise"
            app:argType="com.example.gymapp.domain.exercises.Exercise" />
    </fragment>

    <fragment
        android:id="@+id/exerciseDetailsFragment"
        android:name="com.example.gymapp.ui.screens.exercisedetails.ExerciseDetailsFragment"
        android:label="ExerciseDetails">
        <argument
            android:name="exerciseId"
            app:argType="long" />

        <action
            android:id="@+id/action_exerciseDetailsFragment_to_exerciseEditFragment"
            app:destination="@id/exerciseEditFragment">
            <argument
                android:name="exercise"
                app:argType="com.example.gymapp.domain.exercises.Exercise" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.gymapp.ui.screens.menu.MenuFragment"
        android:label="Menu">
        <action
            android:id="@+id/action_menuFragment_to_createExerciseFragment"
            app:destination="@id/createExerciseFragment" />
        <action
            android:id="@+id/action_menuFragment_to_WorkoutsDetailsFragment"
            app:destination="@id/WorkoutsDetailsFragment" />
        <action
            android:id="@+id/action_menuFragment_to_CreateWorkoutFragment"
            app:destination="@id/CreateWorkoutFragment" />
        <action
            android:id="@+id/action_menuFragment_to_AddExerciseToWorkoutFragment"
            app:destination="@id/AddExerciseToWorkoutFragment" />
        <action
            android:id="@+id/action_menuFragment_to_StartWorkoutFragment"
            app:destination="@id/startWorkoutFragment" />
    </fragment>

    <fragment
        android:id="@+id/createExerciseFragment"
        android:name="com.example.gymapp.ui.fragments.CreateExerciseFragment"
        android:label="Create Exercise" />

</navigation>